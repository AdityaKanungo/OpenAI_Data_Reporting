import pdfkit

def html_file_to_pdf(html_file_path: str, output_pdf: str) -> None:
    """
    Converts an HTML file from a given location into a PDF file.

    Args:
        html_file_path (str): The path to the input HTML file.
        output_pdf (str): The path to the output PDF file.
    """
    try:
        # Read the HTML file content.
        with open(html_file_path, 'r', encoding='utf-8') as file:
            html_content = file.read()
        
        # Convert the HTML content to a PDF file.
        pdfkit.from_string(html_content, output_pdf)
        print(f"PDF successfully created at: {output_pdf}")
    except Exception as e:
        print(f"An error occurred while converting HTML to PDF: {e}")

# Example usage:
if __name__ == "__main__":
    input_html_file = "path/to/your/input.html"  # Replace with your HTML file path
    output_pdf_file = "output.pdf"               # Replace with desired PDF output path
    html_file_to_pdf(input_html_file, output_pdf_file)
